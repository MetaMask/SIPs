{
  "title": "Keyring Permission",
  "type": "object",
  "additionalProperties": false,
  "required": ["chains"],
  "properties": {
    "chains": {
      "title": "List of supported blockchains",
      "type": "array",
      "items": {
        "title": "Specific supported Blockchain",
        "description": "Definition of a supported blockchain type",
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name"],
        "properties": {
          "name": {
            "title": "Blockchain name",
            "description": "User readable name of the supported blockchain",
            "type": "string",
            "minLength": 1,
            "maxLength": 40
          },
          "id": {
            "title": "Blockchain ID",
            "description": "A Blockchain ID using CAIP-2 specification",
            "type": "string",
            "pattern": "[-a-z0-9]{3,8}:[-a-zA-Z0-9]{1,32}"
          },
          "methods": {
            "title": "Supported RPC methods",
            "description": "A list of supported RPC methods on this chain that a DApp can call",
            "type": "array",
            "items": {
              "title": "Supported RPC method name",
              "type": "string",
              "minLength": 1,
              "maxLength": 40
            }
          }
        }
      }
    }
  }
}
